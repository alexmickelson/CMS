<div class="row">
    <div class="col-md-4">
        <img src="data:image/gif;base64,@ViewBag.img.Picture" id="targetImage" />
        @Html.Partial("ImageButton")
        <form id="EditProfileForm" asp-action="EditProfile" asp-controller="Home">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Id" value="@Model.Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="SecurityStamp" value="@Model.SecurityStamp" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="PictureId" class="control-label"></label>
                <input id="targetImageId" type="hidden" asp-for="PictureId" value="" class="form-control" />
                <span asp-validation-for="PictureId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input id="idName" asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bio" class="control-label"></label>
                <input id="idBio" asp-for="Bio" class="form-control" />
                <span asp-validation-for="Bio" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
